<div>
    <h1>Lista de productos:</h1>
    <h2>Total de productos: {{products.length}}</h2>
    {{#each products}}
        <h3>Producto:</h3>
        <div>
            <p>Product id: {{this._id}}</p>
            <p>Name: {{this.title}}</p>
            <p>Category: {{this.category}}</p>
            <p>Description: {{this.description}}</p>
            <p>Price: {{this.price}}</p>
            <p>Status: {{this.status}}</p>
            {{#if status}}
                <button id="button__addToCart--{{this._id}}" class="button__addToCart">Add to Cart</button>
            {{/if}}
        </div>
    {{/each}}

    {{#if hasPrevPage}}
        <h4>Página:</h4>
        <a href="/products?page={{prevPage}}"><button>Anterior</button></a>
    {{/if}}

    {{#if hasNextPage}}
        <h4>Página:</h4>
        <a href="/products?page={{nextPage}}"><button>Siguiente</button></a>
    {{/if}}
</div>