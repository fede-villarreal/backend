<div>
    <h1>Lista de productos actualizada en tiempo real:</h1>

    <div id="productsContainer">
        <h2>Total de productos: {{products.length}}</h2>
        {{#each products}}
        <h3>Producto:</h3>
        <div>
            <p>Product id: {{this._id}}</p>
            <p>Name: {{this.title}}</p>
            <p>Description: {{this.description}}</p>
            <p>Price: {{this.price}}</p>
            <p>Status: {{this.status}}</p>
            <button id="button__delete--{{this._id}}" class="button__deleteProduct">Delete</button>
        </div>
        {{/each}}

    </div>
    <!-- Inicio formulario -->
    <h2>Agregar nuevo producto</h2>
    <form id="form-addProducts">
        <!-- Input de texto para Title -->
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" placeholder="Ingresa el nombre del producto" required>
        <!-- Input de texto para Description -->
        <label for="description">Description:</label>
        <input type="text" name="description" id="description" placeholder="Ingresa la descripcion del producto"
            required>
        <!-- Input de texto para Code -->
        <label for="code">Code:</label>
        <input type="text" name="code" id="code" placeholder="Ingresa el cÃ³digo del producto" required>
        <!-- Input de numero para Price -->
        <label for="price">Price:</label>
        <input type="number" name="price" id="price" placeholder="Ingresa el precio del producto" required>
        <!-- Input de numero para Stock -->
        <label for="stock">Stock:</label>
        <input type="number" name="stock" id="stock" placeholder="Ingresa el cantidad en stock del producto" required>
        <!-- Input de texto para Category -->
        <label for="category">Category:</label>
        <input type="text" name="category" id="category" placeholder="Ingresa la categoria del producto" required>
        <!-- Input de texto para Status -->
        <label for="status">Status:</label>
        <input type="text" name="status" id="status" placeholder="Ingresa el status del producto" required>
        <!-- Input de texto para Thumbnails -->
        <label for="thumbnails">Thumbnails:</label>
        <input type="text" name="thumbnails" id="thumbnails" placeholder="Ingresa la url de la imagen">
        <!-- Boton enviar -->
        <input type="submit" id="enviar">
</div>
<!-- Fin contenedor botones -->
</form>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="js/realTimeProducts.js"></script>